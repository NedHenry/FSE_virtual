#page-content {
    font-size: 1.3em;
    min-height: 350px;
    div.content-section {
        border: 2px solid yellow;
        position: relative;
        background: rgba(0,0,0,0.8);
    }
}

body {
    background-image: url("<%= asset_path('background_foot_image.png') %>");
    background-repeat: no-repeat;
    background-position: bottom center;
    
}

.endorsements {
    img {
        width: 100%;
        height: auto;
    }
    ul {
        list-style: none;
    }  
    .e10t {
        img{
        }
        overflow: hidden;
        background-color: black;
        border: 2px solid yellow;
    }
    .single-row {
        margin-left: auto;
        margin-right: auto;
