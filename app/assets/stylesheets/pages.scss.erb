#page-content {
    font-size: 1.3em;
    min-height: 350px;
    div.content-section {
        border: 2px solid white;
        position: relative;
        background: rgba(0,0,0,0.8);
        h4 {
            color: #ededed;
        }
    }
}

body {
    background-image: url("<%= asset_path('background_foot_image.png') %>");
    background-repeat: no-repeat;
    background-position: bottom center;
    
}

.vendor-list {
    color: #dddddd;
    h5 {
        border-bottom: 1px solid yellow;
        width: 60%;
        margin-left: auto;
        margin-right: auto;
    }
}

div#primary-content div.content-section {
    background-color: rgba(255,255,255,0.2);
    border-radius:7px;
    p{
        color: #c9c9c9;
    }
}

.endorsements {
    img {
        width: 100%;
        height: auto;
        max-width: 700px;
    }
    
    ul {
        list-style: none;
        li {
            max-width:155px;
        }       
    }  
    .e10t {
        overflow: hidden;
        color: black;
        max-width: 155px;
    }
    .row {
        max-width: 675px;
    }
}

#donate-link {
    position: absolute;
    bottom: 3px;
    width: 100%;
    a{
        color: white;
        background-color: rgba(128,128,128,0.6);
        padding: 0.3em;
    }
}

div#page-content-wrapper {
    background-image: url(<%= asset_path "fse_0.jpg" %>) 
}

body {
    background-color: black;
}

#page-content {
    a:hover, a:active {
                 color: #888888;
             }

    li.active a {
        color: #aaaaaa !important;
    }
}