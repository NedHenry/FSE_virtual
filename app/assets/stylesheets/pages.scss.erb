#page-content {
    font-size: 1.3em;
    min-height: 350px;
    div.content-section {
        border: 2px solid yellow;
        position: relative;
        background: rgba(0,0,0,0.8);
    }
}

body {
    background-image: url("<%= asset_path('background_foot_image.png') %>");
    background-repeat: no-repeat;
    background-position: bottom center;
    
}

div#primary-content div.content-section {
    background-color: rgba(255,255,0,0.2);
    border-radius:7px;
    p{
        color: #d9d978;
    }
}

.endorsements {
    img {
        width: 100%;
        height: auto;
    }
    
    ul {
        list-style: none;
        li {
            max-width:300px;
        }       
    }  
    .e10t {
        h4 {
            color: black;
        }
        overflow: hidden;
        background-color: yellow;
        color: black;
        border: 2px solid yellow;
        border-radius: 2px;
        max-width: 300px;
    }
    .single-row {
        margin-left: auto;
        margin-right: auto;
    }
    div {
        display: inline-block;
    }
}
.endorsements.top-banner a img {
    width:auto;
}

#donate-link {
    position: absolute;
    bottom: 3px;
    width: 100%;
    a{
        color: white;
        background-color: rgba(128,128,0,0.6);
        padding: 0.3em;
    }
}

div#page-content-wrapper {
    background-image: url(<%= asset_path "fse_0.jpg" %>) 
}

body {
    background-color: black;
}

#page-content {
    a:hover, a:active {
                 color: #d9eafd !important;
             }

    li.active a {
        color: #aaaaaa !important;
    }
}