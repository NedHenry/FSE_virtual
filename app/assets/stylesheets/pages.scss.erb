.endorsements li, #page-content {
    border: 5px solid yellow;
}

#page-content {
    min-height: 350px;
    background-color: rgba(gray,0.7);
    position: relative;
}

.endorsements ul {
  li {
    overflow:hidden;
    background-color: black;
  }
  list-style:none
}

.endorsements.single-row {
  margin-left: auto;
  margin-right: auto;
}

.endorsements div {
  overflow:hidden;
  display: inline-block;
  background-color: black;
  border: 5px solid yellow;
}

#donate-link {
    position: absolute;
    bottom: 3px;
    width: 100%;
    a{
        color: white;
        background-color: rgba(128,128,0,0.6);
        padding: 0.3em;
    }
}

div#page-content-wrapper {
  background-image: url(<%= asset_path "fse_0.jpg" %>) 
}

div.endorsements {
    .left {
        background-color: blue;
    }
    .right {
        background-color: blue;
    }
}

body {
    background-color: black;
}

#page-content {
    a:hover, a:active {
       color: #d9eafd !important;
    }

    li.active a {
        color: #aaaaaa !important;
    }
}