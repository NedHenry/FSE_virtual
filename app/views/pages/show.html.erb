<h2 class="text-center">
  <%= @page.title %>
</h2>

<h4 class="description text-center">
  <%= @page.description %>
</h4>

<%= render @page.view_partial_name, html: @page.main_html %>

<div class="links">
<% if can? :edit, @page %>
  <%= link_to 'Edit', edit_page_path(@page) %> |
  <%= link_to 'Back', pages_path %>
<% end %>
</div>
