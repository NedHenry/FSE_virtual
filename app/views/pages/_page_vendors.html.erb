<% hall = (params["hall"].to_sym || [:folsom,:dore,:ringold].sample); %>
<% hallcodes = {folsom: '5f60f0512f0c7f100661dc78', dore: '5f60e2244e100a103498bad7', ringold: '5f5fdb0b3da86b4368bb30a4'} %>
<div class="container">
  <div class="mt-0 mb-5 p-3 content-section">
    <h1><%= hall %></h1>
    <iframe width="100%" height="720" src="https://www.artsteps.com/embed/<%= hallcodes[hall] %>/853/480" frameborder="0" allowfullscreen></iframe>

    <div class="row">
      <div class="col-sm text-center <%= 'active' if (hall=='folsom') %>">
        <p class="h5"><%=  (hall=='folsom') ? "You are now viewing" : "Check out our other vendor hall" %></p>
        <a href="/vendors?hall=folsom">
          <h3>Vendor Market 1</h3>
        </a>
        <p>  XXXXXX </p>
        <p>  XXXXXX </p>
      </div>
      <div class="col-sm text-center <%= 'active' if (hall=='dore') %>">
        <p class="h5"><%=  (hall=='dore') ? "Welcome to" : "Check out our other vendor hall" %></p>
        <a href="/vendors?hall=dore">
          <h3 class="text-center">Vendor Market 2</h3>
          <p>  XXXXXX </p>
          <p>  XXXXXX </p>
        </a>
      </div>
    </div>

  </div>

  <p class="text-center">Click the links below for direct access to vendor’s websites or copy/paste the links when you click on a vendor’s image.</p>

  <div class="p-3 content-section vendor-list">
    <h3 class="text-center">List of Vendors</h3>
    
    <div class="my-3 text-center"> <h5 class="mx-auto text-center"> Folsom Street Vendor Hall </h5>
      <div class="container-flex">
        <% vendors("folsom").each_slice(2) do |two_vendors| %>
        <div class="row my-2">
          <% two_vendors.each do |vendor| %>
          <div class="col-sm text-center large">
            <a target="_blank" href="<%= vendor.link %>" <%= "title=#{vendor.caption}" if vendor.caption.present? %>>
              <%= vendor.name %>
            </a>
          </div>
          <% end %>
        </div>
        <% end %>
      </div>

    </div>
    <div class="my-3"> <h5 class="text-center"> Dore Alley Vendor Hall </h5>
      <div class="container-flex">
        <% vendors("dore").each_slice(2) do |two_vendors| %>
        <div class="row my-2">
          <% two_vendors.each do |vendor| %>
          <div class="col-sm text-center large">
            <a target="_blank" href="<%= vendor.link %>" <%= "title=#{vendor.caption}" if vendor.caption.present? %>>
              <%= vendor.name %>
            </a>
          </div>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  
</div>
