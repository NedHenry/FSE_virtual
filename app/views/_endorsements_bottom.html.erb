<div class="endorsements mx-auto mt-3">
  <% secondary_sponsors.each_slice(4) do |slice| %>
  <div class="mx-auto row">
    <% slice.each do |e10t| %>
    <% next unless e10t.logo.present? %>
    <div class="e10t bottom col-md mx-auto my-2 p-0 text-center">
      <a href="<%= e10t.link %>">
        <%= image_tag url_for(e10t.logo.variant(resize: "150x150")), alt: e10t.name, title: e10t.caption %>
      </a>
    </div>
    <% end %>
  </div>
  <% end %>
</div>
