
<div class="mb-4" id="page-header">
  <h2 class="text-center">Welcome to Folsom Street Fair</h2>
  <p class="text-center">This site is for adults only. Please verify that you are over the age of 18 and have read the community guidelines below</p>
</div>

<div id="welcome-video" class="text-center">
  <iframe src="https://player.vimeo.com/video/461165819?autoplay=1" width="640" height="360" frameborder="0" allow="autoplay; fullscreen" allowfullscreen></iframe>
</div>

<%= render '/donations' %>
<%= render '/rules' %>

<div class="content-section my-2 p-3" id="verification">
  <%= form_with(url: "/confirm_age", method: "get", local: true, class: "text-center") do %>
  <%= hidden_field_tag('redirect', params['redirect']) %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-sm-1 mx-2">
        <%= check_box_tag(:confirmation) %>
      </div>
      <div class="col-11-sm">
        <%= label_tag(:confirmation, "I verify that I am over the age of 18 and have read the Community Agreements") %>
      </div>
    </div>
    <div class="row align-center">
      <div class="col">
        <%= submit_tag("Enter") %>
      </div>
    </div>
  </div>
  <% end %>
</div>
