<p id="notice"><%= notice %></p>

<h1>Endorsements</h1>

<table>
  <thead>
    <tr>
      <th>Affiliate</th>
      <th>Name</th>
      <th>Caption</th>
      <th>Enabled</th>
      <th>Media uri</th>
      <th>Media type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @endorsements.each do |endorsement| %>
      <tr>
        <td><%= endorsement.affiliate_id %></td>
        <td><%= endorsement.name %></td>
        <td><%= endorsement.caption %></td>
        <td><%= endorsement.enabled %></td>
        <td><%= endorsement.media_uri %></td>
        <td><%= endorsement.media_type %></td>
        <td><%= link_to 'Show', endorsement %></td>
        <td><%= link_to 'Edit', edit_endorsement_path(endorsement) %></td>
        <td><%= link_to 'Destroy', endorsement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Endorsement', new_endorsement_path %>
