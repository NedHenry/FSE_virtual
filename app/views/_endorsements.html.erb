<% e10ts = random_sponsors(6) %>
<% first_set = e10ts.take(3) %>
<% second_set = e10ts - e10ts.take(3) %>
<div class="endorsements mt-4 left col-lg-<%= second_set.present? ? 2 : 3 %> order-lg-3">
  <ul class="list-group">
    <% first_set.each do |e10t| %>
    <li class="e10t p-0 my-2 mx-auto text-center">
      <a href="<%= e10t.link %>">
        <%= image_tag url_for(e10t.banner.variant(resize: "250x167")), alt: e10t.name, title: e10t.caption %>
      </a>
    </li>
    <% end %>
  </ul>
</div>
<% unless second_set.empty? %>
<div class="endorsements right col-lg-2 order-lg-3">
  <ul class="list-group">
    <% second_set.each do |e10t| %>
    <li class="e10t p-0 my-2 mx-auto text-center">
      <a href="<%= e10t.link %>">
        <%= image_tag url_for(e10t.banner.variant(resize: "200x133")), alt: e10t.name, title: e10t.caption %>
      </a>
    </li>
    <% end %>
  </ul>

</div>
<% end %>
